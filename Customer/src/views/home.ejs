<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head', {title: 'Home' }); %>
<body>
    <%- include('partials/nav'); %>
    <main class="box">

          <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/images/rcblost.jpg" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="/images/tech.jpg" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="/images/ai.avif" class="d-block w-100" alt="...">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>


        <div class="container">
            <h2>Latest News</h2>
          <div id="news-container" class="news-container">
            <% if (news.length > 0) { %>
              <% news.forEach(newsItem => { %>
                <div class="news-item">
                  <h3> <strong>Title: <%= newsItem.title %> </strong></h3>
                  <p><strong>Content: </strong><%= newsItem.content %></p>
                  <p class="category"><strong>category: </strong><%= newsItem.category %></p>
                  <small class="date"><%= new Date(newsItem.date).toLocaleDateString() %></small>
                </div>
              <% }) %>
            <% } else { %>
              <p>No news available at the moment.</p>
            <% } %>
          </div>
        </div>
      </main>
    
      <footer>
        <%- include('partials/footer') %>
      </footer>

    
</body>
</html>